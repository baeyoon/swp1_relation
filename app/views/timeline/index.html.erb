<h1>Timeline</h1>
<%=form_tag '/write', method: 'post' do %>    
    <textarea name="naeyong"></textarea>
    <input type="submit">
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
<ul>
    <% @blogs.each do |b| %>
    <li><%=b.user.email%> : <%=b.content%>
        <%=form_tag '/comment' do%>
        <input type="hidden" name="blog_id" value="<%=b.id%>">
        <input type="text" name="comment">
        <input type="submit">

        <% end %>
        <ol>
        <% b.comments.each do |c| %>
            <li><%=c.user.email%> : <%=c.msg%></li>
        <% end %>
        </ol>
    </li>
    <% end %>
</ul>